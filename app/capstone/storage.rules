rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // PROFILE IMAGES: Users can upload/access their own profile images
    match /profile_images/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // PREDICTION IMAGES: Users can upload/access their own prediction images
    match /predictions/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // GRAD-CAM IMAGES: Users can upload/access their own Grad-CAM images
    match /gradcam_results/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // BACKUP FILES: Users can upload/access their own backup files
    match /backups/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // FEEDBACK ATTACHMENTS: Allow authenticated users to upload feedback attachments
    match /feedback_attachments/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Default: Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 